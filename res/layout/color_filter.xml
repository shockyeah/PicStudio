<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/linearLayout_color_filter">
    <TableLayout android:layout_height="match_parent" android:id="@+id/tableLayout1" android:layout_width="match_parent">
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_width="wrap_content" android:padding="2dp" android:gravity="center|center_vertical">
            <SeekBar android:layout_height="wrap_content" android:id="@+id/seekBar_red" android:layout_width="200dp" android:max="30" android:progress="10" android:progressDrawable="@drawable/seekbar_red"></SeekBar>
            <TextView android:id="@+id/textView_red" android:padding="2dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/red" android:textSize="18dp" android:text="1.0"></TextView>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow3" android:layout_width="wrap_content" android:padding="2dp" android:gravity="center|center_vertical">
            <SeekBar android:layout_height="wrap_content" android:id="@+id/seekBar_green" android:layout_width="200dp" android:max="30" android:progress="10" android:progressDrawable="@drawable/seekbar_green"></SeekBar>
            <TextView android:layout_height="wrap_content" android:id="@+id/textView_green" android:padding="2dp" android:textColor="@color/green" android:textSize="18dp" android:layout_width="wrap_content" android:text="1.0"></TextView>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow4" android:layout_width="wrap_content" android:padding="2dp" android:gravity="center|center_vertical">
            <SeekBar android:layout_height="wrap_content" android:id="@+id/seekBar_blue" android:layout_width="200dp" android:max="30" android:progress="10" android:progressDrawable="@drawable/seekbar_blue"></SeekBar>
            <TextView android:layout_height="wrap_content" android:id="@+id/textView_blue" android:padding="2dp" android:textColor="@color/blue" android:textSize="18dp" android:layout_width="wrap_content" android:text="1.0"></TextView>
        </TableRow>
    </TableLayout>
</LinearLayout>
